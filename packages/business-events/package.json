{
  "name": "@dvsa/business-events",
  "version": "1.1.0",
  "description": "A package to help manage business events in a domain context.",
  "author": "DVSA",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/dvsa/appdev-packages.git",
    "directory": "packages/business-events"
  },
  "files": [
    "**.{js,ts}",
    "!jest.config.ts",
    "!src/__tests__/*.ts",
    "LICENSE",
    "package.json"
  ],
  "keywords": [
    "typescript",
    "nodejs"
  ],
  "scripts": {
    "build": "npm run clean && tsup src/index.ts --format esm,cjs --dts --treeshake --minify",
    "clean": "rimraf coverage dist",
    "gitSecrets": "git secrets --scan . && git log -p -- . | scanrepo",
    "lint": "biome check src",
    "lint:fix": "npm run lint -- --write",
    "prepare": "husky",
    "test": "jest --runInBand",
    "test:coverage": "jest --coverage",
    "build:package": "npm run build",
    "prepublishOnly": "npm run build:package && cp -r ./dist/* . && rm -rf ./dist",
    "postpublish": "git clean -fd"
  },
  "dependencies": {
    "@aws-sdk/client-sns": "^3.699.0",
    "@aws-sdk/credential-providers": "^3.699.0",
    "aws-xray-sdk": "^3.10.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@dvsa/biome-config": "0.1.0",
    "@types/aws-lambda": "^8.10.145",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.15.16",
    "aws-sdk-client-mock": "^4.0.1",
    "aws-sdk-client-mock-jest": "^4.1.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-plugin-context": "^2.9.0",
    "lint-staged": "^15.2.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "typescript": "^5.4.5"
  }
}
