{
  "name": "@dvsa/business-events",
  "version": "1.0.0",
  "description": "A package to help manage business events in a domain context.",
  "author": "DVSA",
  "license": "ISC",
  "files": [
    "index.js",
    "business-event.js",
    "event-factory.js",
    "event-publisher.js",
    "business-event-validator.js",
    "LICENSE",
    "package.json"
  ],
  "keywords": [
    "typescript",
    "nodejs"
  ],
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf coverage dist",
    "format": "prettier . --write",
    "gitSecrets": "git secrets --scan . && git log -p -- . | scanrepo",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepare": "husky",
    "test": "jest --runInBand",
    "test:coverage": "jest --coverage",
    "build:package": "npm run build",
    "prepublishOnly": "npm run build:package && cp -r ./dist/* . && rm -rf ./dist",
    "postpublish": "git clean -fd"
  },
  "dependencies": {
    "@aws-sdk/client-sns": "^3.620.0",
    "@aws-sdk/credential-providers": "^3.620.0",
    "aws-xray-sdk": "^3.9.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "aws-sdk-client-mock": "^4.0.1",
    "aws-sdk-client-mock-jest": "^4.0.1",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.2",
    "jest": "^29.7.0",
    "jest-plugin-context": "^2.9.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.3.0",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "*.{js,ts,mjs,css,md,ts,json}": "npm run lint:fix -- --no-error-on-unmatched-pattern"
  }
}
