{
  "name": "@dvsa/openapi-schema-generator",
  "version": "2.1.0",
  "author": "DVSA",
  "license": "ISC",
  "files": [
    "**.{js,ts}",
    "!jest.config.ts",
    "!src/__tests__/*.ts",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "build": "npm run clean && tsup src/index.ts --format esm,cjs --treeshake --dts --external typescript --minify",
    "clean": "rimraf coverage dist && npm run clean:temp",
    "clean:temp": "rimraf api classes response",
    "gitSecrets": "git secrets --scan . && git log -p -- . | scanrepo",
    "lint": "biome check src",
    "lint:fix": "npm run lint -- --write",
    "prepare": "husky",
    "test": "jest --passWithNoTests",
    "test:coverage": "npm run test -- --coverage",
    "build:package": "npm run build",
    "prepublishOnly": "npm run build:package && cp -r ./dist/* . && rm -rf ./dist",
    "postpublish": "git clean -fd && npm run clean:temp"
  },
  "dependencies": {
    "class-validator-jsonschema": "^5.0.2",
    "openapi3-ts": "^4.4.0",
    "routing-controllers-openapi": "^5.0.0",
    "ts-json-schema-generator": "^2.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@dvsa/biome-config": "0.1.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.16",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.0",
    "rimraf": "^6.0.1",
    "routing-controllers": "^0.11.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,ts,mjs,css,md,ts,json}": "npm run lint:fix -- --no-errors-on-unmatched"
  }
}
